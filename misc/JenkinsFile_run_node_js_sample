node {
   def commit_id
   stage('Preparation') {
     checkout scm
     sh "git rev-parse --short HEAD > .git/commit-id"                        
     commit_id = readFile('.git/commit-id').trim()
   }
   
   stage('Build') {
       sh 'docker build --tag node_js_sample .'
   }
   
    stage('Deploy') {
        sh 'docker ps -q --filter name=node_js_sample | grep -q . && docker stop node_js_sample && docker rm node_js_sample'
      
    }

    stage('Finish') {
        sh 'docker images -qf dangling=true | xargs -I{} docker rmi {}'
    }
   
}
